<header id="main-header" class="fixed w-full transition-all duration-300 z-50 bg-transparent">
  <div class="container mx-auto px-4">
    <nav class="flex items-center justify-between h-20">
      <div class="text-2xl font-bold text-white">
        Company Name
      </div>
      <ul class="flex space-x-8">
        <li><a href="#" class="text-white hover:text-gray-300">Home</a></li>
        <li><a href="#services" class="text-white hover:text-gray-300">Services</a></li>
        <li><a href="#contact" class="text-white hover:text-gray-300">Contact</a></li>
      </ul>
    </nav>
  </div>
</header>

<script>
const header = document.getElementById('main-header');
window.addEventListener('scroll', () => {
  if (window.scrollY > 50) {
    header.classList.remove('bg-transparent');
    header.classList.add('bg-white', 'shadow-md');
    header.classList.add('text-primary');
    // Change text color of all links
    const links = header.getElementsByTagName('a');
    for (let link of links) {
      link.classList.remove('text-white');
      link.classList.add('text-primary');
    }
  } else {
    header.classList.add('bg-transparent');
    header.classList.remove('bg-white', 'shadow-md');
    // Revert text color of all links
    const links = header.getElementsByTagName('a');
    for (let link of links) {
      link.classList.add('text-white');
      link.classList.remove('text-primary');
    }
  }
});
</script>
